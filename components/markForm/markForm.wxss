.container {
    background-color: #fff;
    overflow: hidden;
}

.container .title {
    background: #fff;
    font-size: 35rpx;
    font-weight: 700;
    padding: 26rpx 25rpx;
    text-align: center;
}

.container .form-content {
    padding: 20rpx;
}

.container .form-content .form-item {
    background-color: #fff;
    box-sizing: border-box;
    color: #323233;
    display: flex;
    font-size: 14px;
    line-height: 24px;
    overflow: hidden;
    position: relative;
    width: 100%;
}

.container .form-content .form-item:after {
    border-bottom: 1px solid #ebedf0;
    bottom: 0;
    box-sizing: border-box;
    content: " ";
    left: 0;
    pointer-events: none;
    position: absolute;
    right: 0;
    transform: scaleY(.5);
}

.container .form-content .form-item .form-item-left {
    align-items: center;
    display: flex;
    flex-shrink: 0;
    font-size: 30rpx;
    line-height: 40rpx;
    margin-right: 16rpx;
    width: 30%;
}

.container .form-content .form-item .form-item-left .form-title .form-required {
    color: #ee0a24;
    font-size: 14px;
}

.container .form-content .form-item .form-item-right {
    flex: 1;
}

.container .form-content .form-item .form-item-right .checkbox-group-wrap {
    display: flex;
    flex-wrap: wrap;
    padding: 20rpx 0;
}

.container .form-content .form-item .form-item-right .checkbox-group-wrap .checkbox-wrap {
    margin: 10rpx;
}

.container .form-content .form-item .form-item-right .radio-group-wrap {
    display: flex;
    flex-wrap: wrap;
    padding: 20rpx 0;
}

.container .form-content .form-item .form-item-right .radio-group-wrap .radio-wrap {
    margin: 10rpx;
}

.container .form-content .form-item .form-item-right .type {
    align-items: center;
    background-size: 100% 100%;
    border-radius: 5rpx;
    display: flex;
    height: 120rpx;
    justify-content: center;
    width: 120rpx;
}

.container .form-content .form-item .form-item-right .defaultImg {
    height: 80rpx;
    width: 80rpx;
}

.container .form-content .form-item .form-item-right .uploadSFZ {
    height: 100%;
    width: 100%;
}

.container .form-content .form-item:last-child {
    margin-bottom: 0;
}

.container .form-content .submitBtn {
    background-color: rgba(30,144,255,.8);
    border-radius: 20rpx;
    color: #fff;
    font-size: 28rpx;
    margin-top: 25rpx;
}
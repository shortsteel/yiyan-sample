.modal {
    align-items: center;
    background-color: rgba(0,0,0,.6);
    bottom: 0;
    display: flex;
    height: 100%;
    justify-content: center;
    left: 0;
    position: fixed;
    right: 0;
    top: 0;
    width: 100%;
    z-index: 10000;
}

.modal .content {
    background-color: #fff;
    border-radius: 8rpx;
    width: 612rpx;
}

.modal .content .content-header {
    font-size: 16px;
    font-weight: 500;
    line-height: 48rpx;
    padding-top: 48rpx;
    text-align: center;
}

.modal .content .content-footer {
    align-items: center;
    border-top: 1rpx solid #ebedf0;
    display: flex;
    font-size: 16px;
}

.modal .content .content-footer .item-button {
    color: #707070;
    flex: 1;
    height: 100rpx;
    line-height: 100rpx;
    text-align: center;
}

.modal .content .content-footer .content-footer-confirm {
    border: none;
    color: #21c11f;
}

.modal .content .content-footer .content-footer-cancel {
    border-right: 1rpx solid #ebedf0;
}

.modal .content .content-body {
    color: #7d7e80;
    display: block;
    font-size: 14px;
    line-height: 1.5;
    padding: 24rpx 48rpx 48rpx;
    text-align: center;
}
.blog-header {
    background-color: #999;
    height: 630px;
    overflow: hidden;
    position: relative;
    width: 100%;
    z-index: 2;
}

.blog-header .blog-header-overlay {
    background-color: rgba(0,0,0,.3);
    height: 100%;
    left: 0;
    position: absolute;
    right: 0;
    top: 0;
    width: 100%;
    z-index: 2;
}

.blog-header .header-image-block {
    background-position: 50% 50%;
    background-size: cover;
    height: 100%;
    left: 0;
    position: absolute;
    right: 0;
    top: 0;
    width: 100%;
    z-index: 1;
}
.container {
    align-items: center;
    display: flex;
    flex-direction: column;
    padding: 30rpx;
}

.container .img {
    width: 100%;
}

.container .left_tips {
    color: #71a4b5;
    font-size: 18px;
    font-weight: 700;
    margin-top: 40rpx;
}

.container .text {
    color: #71a4b5;
    font-size: 14px;
    margin-bottom: 40rpx;
    margin-top: 40rpx;
}

.container .btn {
    align-items: center;
    border: 2rpx solid #71a4b5;
    border-radius: 10rpx;
    box-shadow: 0 1px 6px 0 rgba(31,32,35,.12);
    color: #71a4b5;
    display: flex;
    font-size: 14px;
    height: 68rpx;
    justify-content: center;
    width: 280rpx;
}
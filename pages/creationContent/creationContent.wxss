page {
    --popup-background-color: transparent;
}

.container {
    padding-top: 40rpx;
}

.container .bd {
    background: #191919;
    margin-top: -10rpx;
}

.container .van-field__body {
    font-size: 18px;
    font-weight: 700;
}

.container .up {
    margin-left: 30rpx;
}

.container .up_btn {
    background: #242424;
    border: none;
    color: hsla(0,0%,100%,.7);
    font-size: 1.4em;
    height: 160rpx;
    width: 160rpx;
}

.container .editorContain {
    border: 1rpx solid #242424;
    border-radius: 10rpx;
    height: 270rpx;
    margin: 30rpx 30rpx 10rpx;
    overflow: hidden;
}

.container .editorContain .editor {
    background: #191919;
    height: 100%;
    padding: 20rpx 30rpx;
    width: 100%;
}

.container .picker {
    border-radius: 10rpx;
    color: #7a8da5;
    font-weight: 500;
    height: 50rpx;
    margin-left: 70rpx;
    width: 180rpx;
}

.container .picker,.container .selectorWrap {
    align-items: center;
    display: flex;
}

.container .selectorWrap {
    font-size: 14px;
    padding: 0 30rpx;
}

.container .btnWrap {
    display: flex;
    justify-content: center;
    margin: 40rpx 0;
}

.container .btnWrap .btn {
    height: auto;
    padding: 15rpx 100rpx;
}

.container .galleryCard {
    background: #242424;
    border: 1rpx solid rgba(255,254,254,.1);
    border-radius: 20rpx;
    display: flex;
    height: 200rpx;
    margin: 0 20rpx;
    position: relative;
}

.container .galleryCard .galleryCardImage {
    height: 100%;
    padding: 20rpx;
    width: 300rpx;
}

.container .galleryCard .galleryCardText {
    background: #111;
    border-left: 1rpx solid rgba(255,254,254,.1);
    border-radius: 0 20rpx 20rpx 0;
    flex: 1;
    height: 100%;
    overflow: hidden;
    padding: 20rpx 30rpx;
}

.container .galleryCard .delete {
    position: absolute;
    right: -15rpx;
    top: -15rpx;
}

.container .galleryCard+.galleryCard {
    margin-top: 60rpx;
}

.container .textarea {
    color: #fff;
    font-size: 16px;
    height: 200rpx;
    line-height: 1.6;
    width: 100%;
}

.container .placeholder {
    color: #9fa0a0;
    font-size: 16px;
    line-height: 1.6;
}

.container .textareaClose {
    position: absolute;
    right: 12rpx;
    top: 15rpx;
}

.container .popupWrap {
    background: #333;
    height: 400rpx;
    width: 650rpx;
}

.container .btnFixWrap,.container .popupWrap {
    padding: 30rpx;
    position: relative;
}

.container .btnFixWrap {
    border-top: 1rpx solid #c9c9c9;
    bottom: 0;
    color: #576b95;
    height: 100rpx;
    position: fixed;
    width: 100%;
    z-index: 100;
}

.publish {
    bottom: 100rpx;
    height: 100rpx;
    position: fixed;
    right: 40rpx;
    width: 100rpx;
}

.addImg {
    height: 60rpx;
    width: 60rpx;
}

@supports (bottom:constant(safe-area-inset-bottom)) or (bottom:env(safe-area-inset-bottom)) {
    .container {
        padding-bottom: env(safe-area-inset-bottom);
    }
}
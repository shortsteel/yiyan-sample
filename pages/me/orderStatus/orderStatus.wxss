.container {
    align-items: center;
    background-color: #fff;
    border-radius: 0 0 8rpx 8rpx;
    box-shadow: 0 10rpx 40rpx rgba(0,0,0,.1);
    color: #a9a9a9;
    display: flex;
    height: 180rpx;
    justify-content: center;
    padding: 10rpx 20rpx 0;
}

.container .item {
    flex: 1;
    font-size: 12px;
    text-align: center;
}

.container .item .icon {
    height: 50rpx;
    margin-bottom: 10rpx;
    width: 50rpx;
}
.container .header .banner {
    display: block;
    max-height: 600rpx;
    overflow: hidden;
}

.container .header .bottom {
    align-items: center;
    display: flex;
    padding: 10rpx 30rpx 20rpx;
}

.container .header .bottom .bar-icon {
    font-size: 20px;
    margin-right: 20rpx;
}

.container .header .title {
    font-size: 18px;
    font-weight: 500;
    padding: 20rpx 0;
}

.container .header .title van-icon {
    color: #fff;
    font-size: 20px;
    margin-right: 10rpx;
    position: relative;
    top: 6rpx;
}

.container .header .bottom .author {
    align-items: center;
    display: flex;
    margin: 20rpx 0;
}

.container .header .bottom .author .avatar {
    border-radius: 50%;
    height: 60rpx;
    margin-right: 10rpx;
    width: 60rpx;
}

.container .header .bottom .author .nickname {
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 1;
    color: #333;
    display: -webkit-box;
    font-size: 13px;
    max-width: 300rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    word-break: break-all;
}

.container .header .bottom .author .time {
    background: #576b95;
    border: 1rpx solid;
    border-radius: 10rpx;
    color: #fff;
    font-size: 12px;
    padding: 10rpx 20rpx;
}

.container .content-box .comments_title .hd {
    font-size: 16px;
    font-weight: 700;
}

.container .content-box .comments_title .cont {
    font-size: 12px;
    margin-left: 20rpx;
}

.container .content-box .noHint {
    text-align: center;
}

.container .content-box .btn2 {
    background: hsla(0,0%,100%,.1);
    border-color: transparent;
}

.container .content-box .noHint van-icon {
    font-size: 90px;
    margin-top: 80rpx;
    opacity: .6;
}

.container .content-box .noHint text {
    display: block;
    font-size: 14px;
    font-weight: 300;
    margin-bottom: 40rpx;
}

.container .content-box .noHint .btn {
    margin-top: -3rpx;
    opacity: .8;
    padding: 0 40rpx;
}

.comments {
    padding: 50rpx 40rpx 230rpx;
}

.comments .replies {
    margin-top: 40rpx;
}

.comments .item,.comments .replies .item {
    display: flex;
    margin-bottom: 40rpx;
}

.comments .item .avatar,.comments .replies .item .avatar {
    border-radius: 70rpx;
    height: 70rpx;
    width: 70rpx;
}

.comments .replies .item .avatar {
    height: 50rpx;
    margin-top: 5rpx;
    width: 50rpx;
}

.comments .item .right,.comments .replies .item .right {
    display: flex;
    flex: 1;
    flex-direction: column;
    margin-left: 30rpx;
}

.comments>.item>.right {
    border-bottom: 1rpx solid rgba(0,0,0,.08);
    padding-bottom: 40rpx;
}

.comments .replies .item .right {
    margin-left: 20rpx;
}

.comments .item .right .meta,.comments .replies .item .right .meta {
    position: relative;
}

.comments .item .right .meta .header,.comments .replies .item .right .meta .header {
    align-items: center;
    display: flex;
}

.comments .item .right .meta .header .sticky,.comments .replies .item .right .meta .header .sticky {
    color: #ff8140;
    font-size: 16px;
    margin-right: 20rpx;
}

.comments .item .right .meta .nickname,.comments .replies .item .right .meta .nickname {
    color: #fff;
    font-size: 16px;
}

.comments .item .right .meta .nickname.admin,.comments .replies .item .right .meta .nickname.admin {
    border-left: 4rpx solid #8d4fdb;
    line-height: 1;
    padding-left: 10rpx;
}

.comments .item .right .meta .digg-box,.comments .replies .item .right .meta .digg-box {
    display: flex;
    flex-direction: column;
    position: absolute;
    right: 0;
    text-align: center;
    top: 6rpx;
}

.comments .item .right .meta .digg-box .text,.comments .replies .item .right .meta .digg-box .text {
    color: #576b95;
    font-size: 13px;
    line-height: 1.2;
}

.comments .item .right .options,.comments .replies .item .right .options {
    align-items: center;
    display: flex;
    font-size: 11px;
    margin-bottom: 20rpx;
    opacity: .5;
}

.comments .item .right .options .replyBt,.comments .replies .item .right .options .replyBt {
    font-size: 12px;
    padding-left: 20rpx;
}

.comments .item .right .content .text,.comments .replies .item .right .content .text {
    font-size: 16px;
    font-weight: 300;
    word-break: break-all;
}

.comments .item .right .content .approved,.comments .replies .item .right .content .approved {
    color: #707070;
    font-size: 12px;
    padding-top: 15rpx;
}

.comments .item .right .reply-box,.comments .replies .item .right .reply-box {
    background-color: #f4f4f4;
    border-radius: 10rpx;
    margin: 20rpx 0;
    padding: 0 20rpx;
}

.comments .item .right .reply-box .reply-item,.comments .replies .item .right .reply-box .reply-item {
    border-bottom: 1rpx solid #e2e2e2;
    color: #333;
    display: flex;
    font-size: 14px;
    line-height: 1.5;
    padding: 20rpx 0;
}

.comments .item .right .reply-box .reply-item .text,.comments .replies .item .right .reply-box .reply-item .text {
    font-size: 14px;
    margin-right: 10rpx;
    word-break: break-all;
}

.comments .item .right .reply-box .reply-item:last-child,.comments .replies .item .right .reply-box .reply-item:last-child {
    border: none;
}

.comments .replies>.item:last-child,.comments>.item:last-child {
    margin: 0;
}

.comments .replies>.item:last-child>.right,.comments>.item:last-child>.right {
    border: none;
    padding: 0;
}

.container .van-goods-action {
    backdrop-filter: saturate(180%) blur(10rpx);
    background: hsla(0,0%,7%,.8);
    border-top: 1rpx solid rgba(0,0,0,.05);
    box-sizing: initial;
    padding-left: 40rpx;
    padding-right: 30rpx;
    z-index: 100;
}

.container .button-box {
    align-items: center;
    background-color: #f4f4f4;
    display: flex;
    height: 70rpx;
    justify-content: flex-start;
}

.container .comment-edit {
    margin-right: 20rpx;
}

.container .inner-button {
    align-items: center;
    display: flex;
    font-size: 13px;
}

.container .inner-button .edit {
    margin-right: 20rpx;
}

.container .inner-button .face {
    margin: 10rpx 20rpx 0 -20rpx;
}

.container .input-box {
    height: calc(100vh - 350rpx);
    padding: 30rpx;
    position: relative;
}

.container .moments_w {
    margin-right: 20rpx;
}

.container .moments_i {
    height: 42rpx;
    position: relative;
    top: 4rpx;
    width: 42rpx;
}

.container .input-box .field-box .textarea {
    border-radius: 10rpx;
    color: var(--txt-color,#333);
    font-size: 16px;
    height: 300rpx;
    line-height: 1.6;
    margin-top: 20rpx;
    padding: 20rpx 16rpx;
    width: 100%;
}

.container .input-box .field-box .placeholder {
    color: #9fa0a0;
    font-size: 16px;
    line-height: 1.6;
}

.container .input-box .comment-button-box {
    display: flex;
    justify-content: flex-end;
}

.container van-popup van-icon {
    color: var(--x-color,#000);
    font-size: 20px;
    opacity: .8;
    padding: 11rpx 0 0 18rpx;
}

.container .input-box .hd {
    font-size: 16px;
    font-weight: 700;
    left: 50%;
    opacity: .8;
    position: absolute;
    top: 40rpx;
    transform: translate(-50%,0);
}

.container .input-box .comment-button-box .comment-button {
    font-size: 14px;
}

@supports (bottom:constant(safe-area-inset-bottom)) or (bottom:env(safe-area-inset-bottom)) {
    .container {
        padding-bottom: env(safe-area-inset-bottom);
    }
}